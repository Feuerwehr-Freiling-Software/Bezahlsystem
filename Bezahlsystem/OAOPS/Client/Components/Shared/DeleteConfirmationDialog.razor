<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Are you sure?</MudText>
    </TitleContent>
    <DialogContent>
        <span>Bist du sicher, dass du @Name löschen möchtest?</span>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" OnClick="@(async () => await DeleteAsync())">Delete</MudButton>
        <MudButton Color="Color.Primary" OnClick="@(async () => await CancelAsync())">Cancel</MudButton>
    </DialogActions>
</MudDialog>