<MudExpansionPanel Text="@ParentCategory.Name">
    @if (ParentCategory.Children?.Count > 0)
    {
        @foreach (var item in ParentCategory.Children)
        {
            <CategoryComponent ParentCategory="item" />
        }    
    }
    <MudButton Class="mt-5" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" OnClick="() => AddNewCategory(ParentCategory)" Color="Color.Success">Kategorie Hinzufügen</MudButton>
    <MudButton Class="mt-5" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Delete" OnClick="() => RemoveCategory(ParentCategory)" Color="Color.Error">Kategorie Löschen</MudButton>
</MudExpansionPanel>