<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
            Top Up hinzufügen
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudNumericField T="double" @bind-Value="@topUpAmount" Label="Betrag:"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="AddTopUp">Aufladung Hinzufügen</MudButton>
    </DialogActions>
</MudDialog>