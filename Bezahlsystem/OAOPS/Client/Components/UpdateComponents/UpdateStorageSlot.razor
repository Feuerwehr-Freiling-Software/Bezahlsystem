<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit"/>
            Slot @Slot.SlotName
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Value="@Slot.SlotName" Label="Slot Name"/>
        <MudAutocomplete Variant="Variant.Outlined" Label="Storage" @bind-Value="SelectedStorage" SearchFunc="(x) => AutocompleteStorageSearch(x)"/>
        <MudAutocomplete Variant="Variant.Outlined" Label="Artikel" @bind-Value="SelectedArticle" SearchFunc="(x) => AutocompleteArticleSearch(x)" />
        <MudIconButton Icon="@Icons.Material.Filled.Clear" OnClick="() => ClearSelectedArticle()" />
        @if (!string.IsNullOrEmpty(SelectedArticle.Name))
        {
            <MudNumericField @bind-Value="@Slot.QuantityAtStart" Label="Anzahl bei Start" Variant="Variant.Outlined" Min="0" />
            <MudNumericField @bind-Value="@Slot.MinAmount" Label="Min Anzahl für Benachrichtigung" Variant="Variant.Outlined" Min="0" />
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" Variant="Variant.Filled" OnClick="UpdateSlot">Update Slot</MudButton>
    </DialogActions>
</MudDialog>