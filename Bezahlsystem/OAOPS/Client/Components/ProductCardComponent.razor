<MudCard Class="mt-5">
    <MudCardMedia Image="@Path"/>
    <MudCardContent>
        <MudDivider/>
        <MudText Typo="Typo.h6">Name: </MudText><MudText Typo="Typo.h5">@Article.Name</MudText>
        <MudText Typo="Typo.h6">Anzahl verbleibend: </MudText><MudText Typo="Typo.h5">@Article.QuantityActual</MudText>
        <MudText Typo="Typo.h6">Preis: </MudText><MudText Typo="Typo.h6">@Article.PriceAmount €</MudText>
    </MudCardContent>
</MudCard>