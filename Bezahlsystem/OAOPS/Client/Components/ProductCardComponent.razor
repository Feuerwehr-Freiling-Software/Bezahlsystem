<MudCard Class="mt-5">
    <MudCardMedia Image="@getImage()"/>
    <MudCardContent>
        <MudDivider/>
        <MudText Typo="Typo.h5">Name: </MudText><MudText Typo="Typo.h6">@Article.Name</MudText>
        <MudText Typo="Typo.h5">Lagerplatz: </MudText><MudText Typo="Typo.h6">@(Article.StorageName + " " + Article.StorageSlot)</MudText>
        <MudText Typo="Typo.h5">Anzahl verbleibend: </MudText><MudText Typo="Typo.h6">@Article.QuantityActual</MudText>
        <MudText Typo="Typo.h5">Preis: </MudText><MudText Typo="Typo.h6">@Article.PriceAmount €</MudText>
    </MudCardContent>
</MudCard>