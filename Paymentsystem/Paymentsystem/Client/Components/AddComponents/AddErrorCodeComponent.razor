@inject ISnackbar Snackbar
@inject HttpClient http

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1"/>
            Errorcode hinzufügen
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField T="int" @bind-Value="@Errorcode.Code" Label="Code" />
        <MudTextField T="string" @bind-Value="@Errorcode.ErrorText" Label="Text" />
        <MudTextField T="bool" @bind-Value="@Errorcode.IsSuccessErrorcode" Label="Is Successerrorcode" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="AddError">Errorcode Hinzufügen</MudButton>
    </DialogActions>
</MudDialog>
