@page "/products"

@inject HttpClient http

<MudGrid Justify="Justify.FlexStart">
    @foreach (var item in Articles)
    {
        <MudItem Class="d-flex align-center justify-center mud-width-full py-8" Width="300px" xs="4" @onclick="(() => AddToCart(item))">
            <MudCard sm="4">
                <MudCardMedia Image="FM.png"/>
                <MudCardContent>
                <MudDivider Class="my-3"/>
                    <MudText Typo="Typo.h5">@item.Name</MudText>
                    <MudText Typo="Typo.body2">Preis: @item.Price.Amount €</MudText>
                    <MudText Typo="Typo.body2">Übrig: @item.Amount</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    }
</MudGrid>